<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.sahanruwanga.medcarer.activity.AddMedicalRecordActivity"
    android:background="@drawable/background">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbarAddMedicalRecord"
        android:background="@color/colorBackground">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="@color/colorBlack"
                android:layout_gravity="left"
                android:textSize="18sp"
                android:onClick="cancelUpdating"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right"
                android:text="Save"
                android:textColor="@color/colorBlack"
                android:layout_gravity="right"
                android:textSize="18sp"
                android:onClick="saveRecord"/>
        </FrameLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/toolbarAddMedicalRecord">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:id="@+id/diseaseLayout"
                app:cardCornerRadius="8dp">
                <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/disease"
                android:hint="@string/disease_name"
                android:textColor="@color/colorBlack"
                android:background="@drawable/edit_text_design"
                android:padding="5dp"
                android:drawableLeft="@drawable/ic_create"
                android:drawablePadding="5dp"
                android:inputType="textCapWords"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:id="@+id/medicineLayout"
                android:layout_below="@+id/diseaseLayout"
                app:cardCornerRadius="8dp">
                <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/medicine"
                android:hint="@string/medicine_name"
                android:textColor="@color/colorBlack"
                android:background="@drawable/edit_text_design"
                android:padding="5dp"
                android:drawableLeft="@drawable/ic_notification"
                android:drawablePadding="5dp"
                android:inputType="textCapWords"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:id="@+id/allergicLayout"
                android:layout_below="@+id/medicineLayout"
                app:cardCornerRadius="8dp">
                <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/allergic"
                android:hint="@string/allergic_status"
                android:textColor="@color/colorBlack"
                android:background="@drawable/edit_text_design"
                android:padding="5dp"
                android:drawableLeft="@drawable/ic_visibility"
                android:drawablePadding="5dp"
                android:inputType="textCapWords"/>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="112dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:id="@+id/durationLayout1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_below="@+id/allergicLayout">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="@string/from"
                        android:textStyle="bold"
                        android:layout_gravity="right"
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="@string/to"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="right"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <android.support.v7.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/dateCardView1"
                        android:layout_below="@+id/dateCardView1"
                        app:cardCornerRadius="8dp">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/date1"
                            android:background="@drawable/edit_text_design"
                            android:padding="5sp"
                            android:hint="@string/date1"
                            android:textColor="@color/colorBlack"
                            android:drawableLeft="@drawable/ic_info"
                            android:drawablePadding="5dp"
                            android:inputType="date"/>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:id="@+id/dateCardView2"
                        android:layout_below="@+id/durationLayout1"
                        app:cardCornerRadius="8dp">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/date2"
                            android:hint="@string/date1"
                            android:textColor="@color/colorBlack"
                            android:background="@drawable/edit_text_design"
                            android:padding="5sp"
                            android:drawableLeft="@drawable/ic_info"
                            android:drawablePadding="5dp"
                            android:inputType="date"/>
                    </android.support.v7.widget.CardView>
            </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:id="@+id/doctorLayout"
                android:layout_below="@+id/durationLayout1"
                app:cardCornerRadius="8dp">
                <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/doctor"
                android:hint="@string/doctor_name"
                android:textColor="@color/colorBlack"
                android:background="@drawable/edit_text_design"
                android:padding="5dp"
                android:drawableLeft="@drawable/ic_doctor"
                android:drawablePadding="5dp"
                android:inputType="textPersonName|textCapWords"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:id="@+id/contactLayout"
                android:layout_below="@+id/doctorLayout"
                app:cardCornerRadius="8dp">
                <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/contact"
                android:hint="@string/contact_number"
                android:textColor="@color/colorBlack"
                android:background="@drawable/edit_text_design"
                android:padding="5dp"
                android:drawableLeft="@drawable/ic_download"
                android:drawablePadding="5dp"
                android:inputType="phone"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:id="@+id/descriptionLayout"
                android:layout_below="@+id/contactLayout"
                app:cardCornerRadius="8dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/description"
                    android:hint="@string/description"
                    android:textColor="@color/colorBlack"
                    android:background="@drawable/edit_text_design"
                    android:padding="5dp"
                    android:drawableLeft="@drawable/ic_aboutme"
                    android:drawablePadding="5dp"
                    android:maxLines="4"
                    android:inputType="textMultiLine|textCapSentences"
                    android:isScrollContainer="true"/>
            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
