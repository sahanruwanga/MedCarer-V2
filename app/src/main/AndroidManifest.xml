<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sahanruwanga.medcarer">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".app.AppController"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.RegisterActivity" />
        <activity android:name=".activity.MyProfileActivity" />
        <activity android:name=".activity.MedicalHistoryActivity" />
        <activity android:name=".activity.AddMedicalRecordActivity" />
        <activity android:name=".activity.AllergicMedicineActivity" />
        <activity android:name=".activity.AppointmentActivity" />

        <receiver android:name=".app.NotificationHandler" />

        <activity android:name=".activity.ViewMedicalRecordActivity" />
        <activity android:name=".activity.UpdateMedicalRecordActivity" />
        <activity android:name=".activity.AddAppointmentActivity" />
        <activity android:name=".activity.MedicationScheduleActivity" />
        <activity android:name=".activity.NewMedicationScheduleActivity" />
        <activity android:name=".activity.ViewAppointmentActivity" />
        <activity android:name=".activity.UpdateAppointmentActivity" />
        <activity android:name=".activity.UpdateMedicationScheduleActivity" />
        <activity android:name=".activity.NewAllergicMedicineActivity"></activity>

        <receiver android:name=".helper.NetworkStateChecker">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>